<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/m"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/headingBack"
                android:padding="15dp"
                android:text="PICK-UP LOCATION"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pickUp"
                android:padding="20dp"
                android:entries="@array/pickupSpinner"
                android:background="@color/subBack"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/headingBack"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:text="DROP OFF LOCATION"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dropof"
                android:padding="20dp"
                android:entries="@array/pickupSpinner"
                android:background="@color/subBack"
                />





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/headingBack"
                        android:paddingRight="25dp"
                        android:paddingTop="15dp"
                        android:textColor="@color/black"
                        android:paddingBottom="15dp"
                        android:paddingLeft="15dp"
                        android:text="PICK-UP"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/pickupdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/subBack"
                        android:paddingRight="25dp"
                        android:paddingTop="15dp"
                        android:inputType="date"
                        android:paddingBottom="15dp"
                        android:paddingLeft="15dp"
                        android:text="Select Date"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/pickTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/subBack"
                        android:paddingRight="25dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:inputType="time"
                        android:paddingLeft="15dp"
                        android:text="Select Time"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>





                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:paddingLeft="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/headingBack"
                        android:paddingRight="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textColor="@color/black"
                        android:paddingLeft="25dp"
                        android:text="DROP OFF "
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/dropDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/subBack"
                        android:paddingRight="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="25dp"
                        android:text="Select Date"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/dropTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/subBack"
                        android:paddingRight="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="25dp"
                        android:text="Select Time"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/headingBack"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:text="VEHICLE CLASS"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vehicleClass"
                android:padding="20dp"
                android:entries="@array/vehicleClassSpinner"
                android:background="@color/subBack"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/headingBack"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:text="VEHICLE TYPE"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vehicleType"
                android:padding="20dp"
                android:entries="@array/Spinner_vehicle_type"
                android:background="@color/subBack"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/headingBack"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:text="Select Seats"
                android:visibility="gone"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seatsSpinner"
                android:visibility="gone"
                android:padding="20dp"
                android:layout_marginBottom="30dp"
                android:entries="@array/seatSpinner"
                android:background="@color/subBack"
                />



            <TextView
                android:id="@+id/continu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/saveButton"
                android:padding="20dp"
                android:textColor="@color/whitee"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:text="CONTINUE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
        </LinearLayout>




    </ScrollView>


</RelativeLayout>




